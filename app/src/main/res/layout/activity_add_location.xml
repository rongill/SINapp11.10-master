<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/add_location_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add/modify location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/location_name_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_location_header"
        android:layout_marginTop="30dp"
        android:hint="Location Name"/>
    <EditText
        android:id="@+id/location_category_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_name_ET"
        android:layout_marginTop="30dp"
        android:hint="Category"/>

    <EditText
        android:id="@+id/beacon_id_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_category_ET"
        android:layout_marginTop="30dp"
        android:hint="Related Beacon Id"
        />

    <Button
        android:id="@+id/submit_location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Submit changes"
        android:backgroundTint="@color/colorPrimary"
        />



</RelativeLayout>