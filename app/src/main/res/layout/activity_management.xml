<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ManagementActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/management_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/structure_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/management_appbar"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/management_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Management info"
        android:layout_margin="40dp"
        android:gravity="center"
        android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/management_account_name"
            android:text="account name here"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
    <TextView
        android:id="@+id/structure_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="management structure here..."
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/structure_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="structure address here..."
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/structure_maintenance_personal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="structure maintenance personal here..."
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/publish_message_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</RelativeLayout>